@page
@model CustomerSalesSystem.Web.Pages.Search.GlobalSearchModel
@{
    ViewData["Title"] = "Global Search";
}

<h2>Search Results for @Model.Intent</h2>

@if (Model.SearchResults?.Any() == true)
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SearchResults)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-page="@item.TargetPage" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No search results found.</p>
}
