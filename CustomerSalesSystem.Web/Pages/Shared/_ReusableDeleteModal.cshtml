@* _ReusableDeleteModal.cshtml *@
<div id="ReusableDeleteModal" class="modal fade" tabindex="-1" aria-labelledby="ReusableDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-2">
                <h5 class="modal-title" id="ReusableDeleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="my-2 text-dark" id="ReusableDeleteModalMessage">Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer border-2 d-flex justify-content-end">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" id="modalDeleteId" value="">
                    <input type="hidden" name="entityType" id="modalDeleteEntity" value="">
                    <button type="button" class="btn btn-light " data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger ">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('ReusableDeleteModal');
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;

            const id = button.getAttribute('data-id');
            const entity = button.getAttribute('data-entity');
            const title = button.getAttribute('data-title');

            document.getElementById('modalDeleteId').value = id;
            document.getElementById('modalDeleteEntity').value = entity;

            // Update modal title and message dynamically
            document.getElementById('ReusableDeleteModalLabel').textContent = `${title}`;
    document.getElementById('ReusableDeleteModalMessage').textContent =
      `Are you sure you want to delete this ${title.replace(/delete|remove/i, '').trim().toLowerCase()}?`;

        });
    }
</script>
